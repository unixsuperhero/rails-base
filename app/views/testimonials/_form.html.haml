= form_for @testimonial, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :location, :class => 'control-label'
    .controls
      = f.text_field :location, :class => 'text_field'
  .control-group
    = f.label :testimonial, :class => 'control-label'
    .controls
      = f.text_area :testimonial, :class => 'text_area'
  .control-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.text_field :image, :class => 'text_field'
  .control-group
    = f.label :slug, :class => 'control-label'
    .controls
      = f.text_field :slug, :class => 'text_field'
  .control-group
    = f.label :plan_id, :class => 'control-label'
    .controls
      = f.number_field :plan_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), testimonials_path, :class => 'btn'
