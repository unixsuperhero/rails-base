= form_for @campaign, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :cpid, :class => 'control-label'
    .controls
      = f.text_field :cpid, :class => 'text_field'
  .control-group
    = f.label :phone_number, :class => 'control-label'
    .controls
      = f.text_field :phone_number, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), campaigns_path, :class => 'btn'
