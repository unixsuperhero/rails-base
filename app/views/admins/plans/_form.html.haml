= form_for [:admins,@plan], html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :plan_type, class: 'control-label'
    .controls
      = f.text_field :plan_type, class: 'text_field'
  .control-group
    = f.label :slug, class: 'control-label'
    .controls
      = f.text_field :slug, class: 'text_field'
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admins_plans_path, class: 'btn'
