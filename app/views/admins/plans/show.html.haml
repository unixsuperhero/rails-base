- model_class = Plan
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:plan_type) + ':'
  %br
  = @plan.plan_type
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @plan.slug

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), plans_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_plan_path(@plan), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), plan_path(@plan), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
