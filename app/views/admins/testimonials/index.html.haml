- model_class = Testimonial
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:location)
      %th= model_class.human_attribute_name(:testimonial)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:slug)
      %th= model_class.human_attribute_name(:plan_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @testimonials.each do |testimonial|
      %tr
        %td= link_to testimonial.id, admins_testimonial_path(testimonial)
        %td= testimonial.name
        %td= testimonial.location
        %td= testimonial.testimonial
        %td= testimonial.image
        %td= testimonial.slug
        %td= testimonial.plan_id
        %td=l testimonial.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admins_testimonial_path(testimonial), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admins_testimonial_path(testimonial), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admins_testimonial_path, :class => 'btn btn-primary'
