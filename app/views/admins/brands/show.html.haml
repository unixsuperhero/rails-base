- model_class = Brand
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @brand.name
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @brand.slug
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @brand.title
%p
  %strong= model_class.human_attribute_name(:meta_tag) + ':'
  %br
  = @brand.meta_tag

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admins_brands_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admins_brand_path(@brand), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admins_brand_path(@brand), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
