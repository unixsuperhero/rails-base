- model_class = Brand
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:slug)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:meta_tag)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @brands.each do |brand|
      %tr
        %td= link_to brand.id, admins_brand_path(brand)
        %td= brand.name
        %td= brand.slug
        %td= brand.title
        %td= brand.meta_tag
        %td= brand.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admins_brand_path(brand), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admins_brand_path(brand), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admins_brand_path, :class => 'btn btn-primary'
