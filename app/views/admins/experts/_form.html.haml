= form_for @expert, html: { class: 'form-horizontal' } do |f|
  .span6
    .control-group
      = f.label :name, class: 'control-label'
      .controls
        = f.text_field :name, class: 'text_field'
    .control-group
      = f.label :text_line_1, class: 'control-label'
      .controls
        = f.text_field :text_line_1, class: 'text_field'
    .control-group
      = f.label :text_line_2, class: 'control-label'
      .controls
        = f.text_field :text_line_2, class: 'text_field'
    .control-group
      = f.label :image, class: 'control-label'
      .controls
        = f.text_field :image, class: 'text_field'
    .control-group
      = f.label :slug, class: 'control-label'
      .controls
        = f.text_field :slug, class: 'text_field'
  .span6
  .clearfix
    .control-group
      = f.label :bio, class: 'control-label'
      .controls
        = f.text_area :bio, class: 'text_area', rows: 5
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), experts_path, class: 'btn'
