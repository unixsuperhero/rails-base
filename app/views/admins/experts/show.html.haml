- model_class = Expert
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @expert.name
%p
  %strong= model_class.human_attribute_name(:text_line_1) + ':'
  %br
  = @expert.text_line_1
%p
  %strong= model_class.human_attribute_name(:text_line_2) + ':'
  %br
  = @expert.text_line_2
%p
  %strong= model_class.human_attribute_name(:bio) + ':'
  %br
  = @expert.bio
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @expert.image
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @expert.slug

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admins_experts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admins_expert_path(@expert), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admins_expert_path(@expert), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
