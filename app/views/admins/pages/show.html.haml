- model_class = Page
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @page.slug
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @page.content
%p
  %strong= model_class.human_attribute_name(:meta_tag) + ':'
  %br
  = @page.meta_tag
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @page.title
%p
  %strong= model_class.human_attribute_name(:breadcrumb_name) + ':'
  %br
  = @page.breadcrumb_name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admins_pages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admins_page_path(@page), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admins_page_path(@page), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
