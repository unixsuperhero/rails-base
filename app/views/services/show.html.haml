- model_class = Service
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @service.image
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @service.name
%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @service.title
%p
  %strong= model_class.human_attribute_name(:text) + ':'
  %br
  = @service.text
%p
  %strong= model_class.human_attribute_name(:short_description) + ':'
  %br
  = @service.short_description
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @service.type
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = @service.slug

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), services_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_service_path(@service), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), service_path(@service), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
